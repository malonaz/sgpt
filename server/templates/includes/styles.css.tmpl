{{define "styles"}}
:root {
    /* Background colors - soft dark blues, easier on eyes */
    --bg-base: #0f172a;
    --bg-primary: #1e293b;
    --bg-secondary: #334155;
    --bg-tertiary: #475569;
    --bg-hover: #3b4c63;

    /* Surface colors for cards/panels */
    --surface: #1e293b;
    --surface-hover: #2d3f55;
    --surface-border: #3b4c63;

    /* Text colors - high contrast but soft */
    --text-primary: #f1f5f9;
    --text-secondary: #cbd5e1;
    --text-muted: #94a3b8;
    --text-dim: #64748b;

    /* Accent colors */
    --accent: #3b82f6;
    --accent-hover: #7dd3fc;
    --accent-muted: #0ea5e9;

    /* Message colors */
    --msg-user-bg: #2d4a8a;
    --msg-user-text: #e0f2fe;
    --msg-assistant-bg: #292524;
    --msg-assistant-border: #3b4c63;
    --msg-system-bg: #78350f;
    --msg-system-border: #a16207;
    --msg-system-text: #fef3c7;

    /* Functional colors */
    --success: #22c55e;
    --warning: #f59e0b;
    --error: #ef4444;

    /* Code block */
    --code-bg: #1e1e1e;
    --code-border: #334155;

    /* Tag colors */
    --tag-bg: #3b82f6;
    --tag-text: #ffffff;
    --tag-muted-bg: #334155;
    --tag-muted-text: #cbd5e1;

    /* Shadows */
    --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.3);
    --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.4);
    --shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.5);

    /* Border radius */
    --radius-sm: 6px;
    --radius-md: 10px;
    --radius-lg: 16px;
    --radius-xl: 20px;

    /* Font sizes - larger for readability */
    --font-xs: 0.8125rem;
    --font-sm: 0.9375rem;
    --font-base: 1.0625rem;
    --font-lg: 1.25rem;
    --font-xl: 1.5rem;
    --font-2xl: 1.875rem;
    --font-3xl: 2.25rem;
}

* { box-sizing: border-box; margin: 0; padding: 0; }

body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    background: var(--bg-base);
    color: var(--text-primary);
    line-height: 1.7;
    min-height: 100vh;
    font-size: var(--font-base);
}

.app {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
}

/* Header */
.header {
    position: sticky;
    top: 0;
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 2rem;
    background: var(--bg-primary);
    border-bottom: 1px solid var(--surface-border);
    height: 64px;
    box-shadow: var(--shadow-md);
}

.header-left, .header-right {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    min-width: 220px;
}

.header-right { justify-content: flex-end; }

.header-center h1 {
    font-size: var(--font-lg);
    font-weight: 500;
    color: var(--text-secondary);
}

.logo {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    color: var(--text-primary);
    text-decoration: none;
    font-weight: 600;
    font-size: var(--font-xl);
}

.logo svg { color: var(--accent); }

.back-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: var(--font-sm);
    padding: 0.5rem 1rem;
    border-radius: var(--radius-sm);
    transition: all 0.15s;
    border: 1px solid transparent;
}

.back-link:hover {
    color: var(--text-primary);
    background: var(--bg-secondary);
    border-color: var(--surface-border);
}

.icon-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border: 1px solid var(--surface-border);
    background: var(--bg-secondary);
    color: var(--text-secondary);
    border-radius: var(--radius-sm);
    cursor: pointer;
    transition: all 0.15s;
}

.icon-btn:hover {
    background: var(--bg-hover);
    color: var(--text-primary);
    border-color: var(--accent);
}

/* Main Content */
.main {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding: 2rem;
}

/* Content Wrapper - the soft wrapper around inbox/chat */
.content-wrapper {
    max-width: 1600px;
    width: 100%;
    margin: 0 auto;
    background: var(--surface);
    border: 1px solid var(--surface-border);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-lg);
    padding: 2rem;
    min-height: calc(100vh - 64px - 4rem);
}

/* Inbox */
.inbox {
    width: 100%;
}

.search-box {
    position: relative;
    margin-bottom: 2rem;
}

.search-box input {
    width: 100%;
    padding: 1rem 1.25rem 1rem 3.25rem;
    background: var(--bg-secondary);
    border: 2px solid var(--surface-border);
    border-radius: var(--radius-md);
    color: var(--text-primary);
    font-size: var(--font-base);
    outline: none;
    transition: border-color 0.15s, box-shadow 0.15s;
}

.search-box input:focus {
    border-color: var(--accent);
    box-shadow: 0 0 0 3px rgba(56, 189, 248, 0.2);
}

.search-box input::placeholder { color: var(--text-muted); }

.search-box svg {
    position: absolute;
    left: 1.125rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--text-muted);
    width: 20px;
    height: 20px;
}

.search-box .clear-btn {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: var(--text-muted);
    cursor: pointer;
    padding: 0.375rem;
    border-radius: var(--radius-sm);
    display: flex;
}

.search-box .clear-btn:hover { color: var(--text-primary); }

.filters {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
}

.tag {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.2rem 0.875rem;
    background: var(--tag-bg);
    color: var(--tag-text);
    border-radius: 20px;
    font-size: var(--font-sm);
    font-weight: 500;
}

.tag.clickable {
    cursor: pointer;
    transition: background 0.15s, transform 0.15s;
}

.tag.clickable:hover {
    background: var(--accent-hover);
    transform: translateY(-1px);
}

.tag .remove {
    background: none;
    border: none;
    color: inherit;
    cursor: pointer;
    padding: 0;
    margin-left: 0.25rem;
    opacity: 0.8;
    font-size: 1.2em;
    line-height: 1;
}

.tag .remove:hover { opacity: 1; }

.tag-input-form {
    display: flex;
}

.tag-input-form input {
    padding: 0.4rem 0.875rem;
    background: var(--bg-secondary);
    border: 1px solid var(--surface-border);
    border-radius: 20px;
    color: var(--text-primary);
    font-size: var(--font-sm);
    outline: none;
    width: 160px;
}

.tag-input-form input:focus { border-color: var(--accent); }

/* Chat List */
.chat-list { display: flex; flex-direction: column; gap: 0.75rem; }

.chat-item {
    display: block;
    padding: 1.25rem 1.5rem;
    background: var(--bg-primary);
    border: 1px solid var(--surface-border);
    border-radius: var(--radius-lg);
    text-decoration: none;
    color: inherit;
    transition: all 0.2s;
}

.chat-item:hover {
    background: var(--surface-hover);
    border-color: var(--accent-muted);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
}

.chat-item-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0.625rem;
}

.chat-item-title {
    font-weight: 600;
    color: var(--text-primary);
    font-size: var(--font-lg);
}

.chat-item-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: var(--font-sm);
    color: var(--text-muted);
}

.chat-item-tags {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 0.625rem;
    flex-wrap: wrap;
}

.chat-item-tags .tag {
    font-size: var(--font-xs);
    padding: 0.25rem 0.625rem;
    background: var(--tag-muted-bg);
    color: var(--tag-muted-text);
}

.chat-item-files {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 0.625rem;
    flex-wrap: wrap;
}

.file-badge {
    font-family: 'SF Mono', Monaco, 'Fira Code', monospace;
    font-size: var(--font-xs);
    padding: 0.25rem 0.625rem;
    background: var(--bg-secondary);
    border: 1px solid var(--surface-border);
    border-radius: var(--radius-sm);
    color: var(--text-secondary);
}

.chat-item-preview {
    font-size: var(--font-sm);
    color: var(--text-secondary);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 1.6;
}

.delete-btn {
    background: none;
    border: none;
    color: var(--text-muted);
    cursor: pointer;
    padding: 0.5rem;
    border-radius: var(--radius-sm);
    display: flex;
    opacity: 0;
    transition: all 0.15s;
}

.chat-item:hover .delete-btn { opacity: 1; }
.delete-btn:hover { color: var(--error); background: rgba(239, 68, 68, 0.15); }

.empty-state {
    text-align: center;
    padding: 5rem 2rem;
    color: var(--text-muted);
}

.empty-state svg { margin-bottom: 1.5rem; opacity: 0.5; }
.empty-state p { font-size: var(--font-lg); }

/* Pagination */
.pagination {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 2.5rem;
}

.pagination a {
    padding: 0.625rem 1rem;
    background: var(--bg-secondary);
    border: 1px solid var(--surface-border);
    border-radius: var(--radius-sm);
    color: var(--text-secondary);
    text-decoration: none;
    font-size: var(--font-sm);
    font-weight: 500;
    transition: all 0.15s;
}

.pagination a:hover {
    background: var(--bg-hover);
    color: var(--text-primary);
    border-color: var(--accent-muted);
}

.pagination a.active {
    background: var(--accent);
    border-color: var(--accent);
    color: white;
}

/* Chat View */
.chat-view {
    flex: 1;
    display: flex;
    flex-direction: column;
    width: 100%;
}

.chat-meta {
    padding: 1.25rem 0;
    padding-top: 0;
    border-bottom: 1px solid var(--surface-border);
    margin-bottom: 0;
}

.chat-meta-row {
    display: flex;
    align-items: center;
    gap: 1.25rem;
    flex-wrap: wrap;
    font-size: var(--font-md);
    color: var(--text-muted);
    justify-content: space-between;
}

.chat-id {
    font-family: 'SF Mono', Monaco, 'Fira Code', monospace;
    padding: 0.3rem 0.625rem;
    background: var(--bg-secondary);
    border: 1px solid var(--surface-border);
    border-radius: var(--radius-sm);
    cursor: pointer;
    transition: all 0.15s;
    font-size: var(--font-sm);
}

.chat-id:hover { background: var(--bg-hover); border-color: var(--accent); }
.chat-id.copied { background: var(--accent); color: white; border-color: var(--accent); }

.chat-tags-row {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 0.625rem;
    margin-top: 0.75rem;
    flex-wrap: wrap;
}

.chat-tags-row .chat-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
}

.chat-tags-row .tag-form {
    display: flex;
    gap: 0.5rem;
}

.chat-tags-row .tag-form input {
    padding: 0.4rem 0.75rem;
    background: var(--bg-secondary);
    border: 1px solid var(--surface-border);
    border-radius: var(--radius-sm);
    color: var(--text-primary);
    font-size: var(--font-sm);
    outline: none;
    width: 140px;
}

.chat-tags-row .tag-form input:focus { border-color: var(--accent); }

.chat-tags-row .tag-form button {
    padding: 0.4rem 0.875rem;
    background: var(--accent);
    border: none;
    border-radius: var(--radius-sm);
    color: white;
    font-size: var(--font-sm);
    font-weight: 500;
    cursor: pointer;
    transition: background 0.15s;
}

.chat-tags-row .tag-form button:hover { background: var(--accent-hover); }

.chat-files {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    justify-content: flex-end;
    margin-left: auto;
    margin-top: 0.75rem;
}

/* Messages */
.messages {
    padding: 1.5rem 0 2.5rem;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
}

.message {
    display: flex;
    flex-direction: column;
    max-width: 85%;
    width: 100%;
    box-shadow: var(--shadow-md);
}

.message.user {
    align-self: flex-end;
    align-items: flex-end;
    width: fit-content;
}

.message.assistant,
.message.system {
    align-self: flex-start;
    align-items: flex-start;
}

.message-content {
    font-size: var(--font-base);
    line-height: 1.8;
    white-space: pre-wrap;
    word-wrap: break-word;
    padding: 1rem 1.375rem;
    border-radius: var(--radius-lg);
    width: 100%;
}

.message.user .message-content {
    background: var(--msg-user-bg);
    color: var(--msg-user-text);
    border-bottom-right-radius: 4px;
}

.message.assistant .message-content {
    background: var(--msg-assistant-bg);
    border: 1px solid var(--msg-assistant-border);
    color: var(--text-primary);
    border-bottom-left-radius: 4px;
}

.message.system .message-content {
    background: var(--msg-system-bg);
    color: var(--msg-system-text);
    border: 1px solid var(--msg-system-border);
    font-size: var(--font-sm);
}

/* Reasoning Block */
.reasoning-block {
    margin-bottom: 0.625rem;
    border: 1px solid var(--surface-border);
    border-radius: var(--radius-md);
    overflow: hidden;
    width: 100%;
}

.reasoning-toggle {
    width: 100%;
    display: flex;
    align-items: center;
    gap: 0.625rem;
    padding: 0.75rem 1rem;
    background: var(--bg-secondary);
    border: none;
    color: var(--text-muted);
    font-size: var(--font-sm);
    cursor: pointer;
    transition: all 0.15s;
}

.reasoning-toggle:hover { background: var(--bg-hover); color: var(--text-secondary); }

.reasoning-toggle svg {
    transition: transform 0.2s;
}

.reasoning-toggle.open svg { transform: rotate(90deg); }

.reasoning-content {
    display: none;
    padding: 1rem;
    background: var(--msg-assistant-bg);
    font-size: var(--font-sm);
    color: var(--text-muted);
    white-space: pre-wrap;
    max-height: 350px;
    overflow-y: auto;
    border-top: 1px solid var(--surface-border);
    line-height: 1.7;
}

.reasoning-content.open { display: block; }
.reasoning-content.open pre[class*="language-"] {
    margin: 1rem 0;
    border-radius: var(--radius-md);
}


/* Code Blocks in Messages */
.message-content pre[class*="language-"] {
    margin: 1rem 0;
    border-radius: var(--radius-md);
}

.message.user .message-content pre[class*="language-"] {
    background: rgba(0, 0, 0, 0.25) !important;
}

.message.user .message-content code {
    color: rgba(255, 255, 255, 0.95);
}

/* Code Blocks */
pre[class*="language-"] {
    margin: 1.25rem 0;
    border-radius: var(--radius-md);
    background: var(--code-bg) !important;
    border: 1px solid var(--code-border);
    position: relative;
}

code[class*="language-"] {
    font-family: 'SF Mono', Monaco, 'Fira Code', monospace;
    font-size: var(--font-sm);
    line-height: 1.6;
}

.code-copy-btn {
    position: absolute;
    top: 0.625rem;
    right: 0.625rem;
    display: flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.4rem;
    background: var(--bg-secondary);
    border: 1px solid var(--surface-border);
    border-radius: var(--radius-sm);
    color: var(--text-secondary);
    font-size: var(--font-xs);
    cursor: pointer;
    transition: all 0.15s;
}

.code-copy-btn:hover {
    background: var(--bg-hover);
    color: var(--text-primary);
    border-color: var(--accent);
}

.code-copy-btn.copied {
    background: var(--accent);
    border-color: var(--accent);
    color: white;
}

/* Scrollbar */
::-webkit-scrollbar { width: 10px; height: 10px; }
::-webkit-scrollbar-track { background: var(--bg-base); }
::-webkit-scrollbar-thumb { background: var(--bg-secondary); border-radius: 5px; }
::-webkit-scrollbar-thumb:hover { background: var(--accent-muted); }

/* Selection */
::selection { background: var(--accent); color: white; }

/* Copyable */
.copyable {
    cursor: pointer;
    transition: all 0.15s;
}
.copyable:hover { color: var(--accent); }
.copyable.copied { color: var(--accent); }
{{end}}
