{{define "styles"}}
:root {
    --primary-color: #3b82f6;
    --primary-hover: #60a5fa;
    --background-color: #0f172a;
    --surface-color: #1e293b;
    --surface-color-hover: #334155;
    --text-primary: #f1f5f9;
    --text-secondary: #94a3b8;
    --border-color: #334155;
    --message-user: #2d4a8a;
    --message-assistant: #292524;
    --message-system: #854d0e;
    --shadow-color: rgba(0, 0, 0, 0.5);
}

.code-wrapper {
    position: relative;
}

.copy-button {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    background-color: transparent;
    border: 1px solid var(--border-color);
    border-radius: 4px;
    padding: 0.25rem;
    color: var(--text-secondary);
    cursor: pointer;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
}

.copy-button:hover {
    background-color: var(--primary-color);
    color: white;
}

.copy-button svg {
    width: 30px;
    height: 30px;
}

.copyable {
    cursor: pointer;
    background-color: var(--surface-color-hover);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    transition: all 0.2s ease;
    border: 1px solid var(--border-color);
}

.copyable:hover {
    background-color: var(--primary-color);
    color: white;
}

.copyable:active {
    transform: scale(0.98);
}

body {
    font-family: 'Inter', sans-serif;
    background-color: var(--background-color);
    color: var(--text-primary);
    margin: 0;
    padding: 0;
    line-height: 1.5;
}

.container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 2rem;
    padding-top: calc(5rem + 2rem); /* Add extra padding to account for fixed header */
}

.header {
    background-color: var(--surface-color);
    padding: 1.5rem 2rem;
    border-radius: 0; /* Remove border radius since it's now full width */
    box-shadow: 0 4px 6px var(--shadow-color);
    margin-bottom: 2rem;
    border: 1px solid var(--border-color);
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: fixed; /* Pin the header */
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000; /* Ensure header stays above other content */
    height: 30px;
    max-height: 30px;
}

.header-wrapper {
    max-width: 1600px;
    margin: 0 auto;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.back-button {
    text-decoration: none;
    color: var(--text-secondary);
    padding: 0.75rem 1.5rem;
    background-color: var(--surface-color);
    border-radius: 8px;
    border: 1px solid var(--border-color);
    transition: all 0.2s ease;
    font-weight: 500;
    width: fit-content;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.back-button svg {
    width: 20px;
    height: 20px;
}

.back-button:hover {
    background-color: var(--surface-color-hover);
    color: var(--text-primary);
    border-color: var(--primary-color);
}

.back-button span {
    line-height: 1;
}

.chat-preview {
    background-color: var(--surface-color);
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 1rem;
    box-shadow: 0 4px 6px var(--shadow-color);
    transition: all 0.2s ease;
    text-decoration: none;
    color: inherit;
    display: block;
    border: 1px solid var(--border-color);
}

.chat-preview:hover {
    transform: translateY(-2px);
    background-color: var(--surface-color-hover);
    border-color: var(--primary-color);
    box-shadow: 0 6px 8px var(--shadow-color);
}

.chat-preview-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    color: var(--text-secondary);
    font-size: 1.4rem;
    flex-wrap: wrap;
}

.chat-preview-header span {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.chat-preview-content {
    color: var(--text-primary);
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    line-height: 1.6;
    padding-left: 0.5rem; /* Add some padding for the bullets */
}

.chat-preview-content br {
    content: "";
    margin: 0.5rem 0;
    display: block;
}

.message {
    margin: 1rem 0;
    padding: 1rem 1.5rem;
    border-radius: 12px;
    white-space: pre-wrap;
    word-wrap: break-word;
    max-width: 80%;
    line-height: 1.6;
    box-shadow: 0 2px 4px var(--shadow-color);
}

.user-message {
    background-color: var(--message-user);
    margin-left: auto;
    border-radius: 12px 12px 0 12px;
    color: #e2e8f0;
    width: fit-content;
}

.assistant-message {
    background-color: var(--message-assistant);
    margin-right: auto;
    border-radius: 12px 12px 12px 0;
    border: 1px solid var(--border-color);
}

.system-message {
    background-color: var(--message-system);
    font-style: italic;
    margin: 1rem auto;
    max-width: 90%;
    color: #fef3c7;
}

.pagination {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin: 2rem 0;
}

.pagination a {
    padding: 0.75rem 1rem;
    text-decoration: none;
    background-color: var(--surface-color);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    color: var(--text-secondary);
    transition: all 0.2s ease;
    font-weight: 500;
}

.pagination a.active {
    background-color: var(--primary-color);
    color: white;
    border-color: var(--primary-color);
}

.pagination a:hover:not(.active) {
    background-color: var(--surface-color-hover);
    color: var(--text-primary);
    border-color: var(--primary-color);
}

.no-chats {
    text-align: center;
    padding: 3rem;
    background-color: var(--surface-color);
    border-radius: 12px;
    color: var(--text-secondary);
    border: 1px solid var(--border-color);
}

.main-content {
    background-color: var(--surface-color);
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 4px 6px var(--shadow-color);
    border: 1px solid var(--border-color);
}

h1 {
    margin: 0;
    font-size: 1.5rem;
    color: var(--text-primary);
    font-weight: 600;
}

/* Selection style */
::selection {
    background-color: var(--primary-color);
    color: white;
}

/* Scrollbar styling */
::-webkit-scrollbar {
    width: 10px;
}

::-webkit-scrollbar-track {
    background: var(--background-color);
}

::-webkit-scrollbar-thumb {
    background: var(--surface-color-hover);
    border-radius: 5px;
}

::-webkit-scrollbar-thumb:hover {
    background: var(--primary-color);
}

pre[class*="language-"] {
    margin: 1em 0;
    border-radius: 8px;
    background-color: #1e1e1e !important;
}

code[class*="language-"] {
    font-family: 'Fira Code', monospace;
    font-size: 0.9em;
}

.token.comment,
.token.prolog,
.token.doctype,
.token.cdata {
    color: #6a9955;
}

.files-section {
    border-radius: 8px;
    padding: 1rem;
    margin: 1rem 0;
}

.files-section h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1rem;
    color: var(--text-secondary);
}

.file-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
}

.file-item {
    background-color: var(--surface-color);
    border: 1px solid var(--border-color);
    border-radius: 4px;
    padding: 0.25rem 0.5rem;
}

.file-name {
    font-family: 'Fira Code', monospace;
    font-size: 0.9em;
}

.file-count {
    background-color: var(--primary-color);
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.9em;
}

.chat-preview-header {
    flex-wrap: wrap;
    gap: 0.5rem;
}
{{end}}
